@model StudentManagementSystem.Models.Student
@{ ViewData["Title"]="Delete Student"; }
<h2>Delete Student</h2>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StudentID" />
    <p>Are you sure you want to delete <strong>@Model.FirstName @Model.LastName</strong>?</p>
    <button class="btn btn-danger" type="submit">Delete</button>
    <a class="btn btn-secondary" href="/Students">Cancel</a>
</form>
